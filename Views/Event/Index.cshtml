

<div class="container">
    <div class="row justify-content-center">
        @foreach (var e in Model)
        {
            <div class="col-md-4 mb-3"> 
                <div class="card" style="width: 20rem;">
                    <div class="text-center">
                        <img class="card-img-top" src="~/img/@e.Image" alt="Card image cap" style="width: 100%; height: 10rem;">
                    </div>
                    <div class="card-body mb-3">
                        <h5 class="card-title">@e.EventName</h5>
                        <p class="card-text">Location: @e.EventLocation</p>
                        <p class="card-text">Price: $@e.EventPrice</p>
                        <a asp-controller="" asp-action="" class="btn btn-primary">JOIN</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

